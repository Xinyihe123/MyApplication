<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".SearchGeography">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/background1"
        android:gravity="bottom"
        android:orientation="vertical">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="33dp"
            android:orientation="horizontal"
            android:layout_marginTop="20dp">

            <Button
                android:id="@+id/returnHome"
                android:layout_width="70dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="5dp"
                android:background="@drawable/rounded_button"
                android:bottomRightRadius="20dp"
                android:text="Back" />

            <TextView
                android:id="@+id/geographyIntro"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="  Airport Geography"
                android:textColor="#000000"
                android:typeface="monospace"
                android:textSize="22dp"
                android:layout_gravity="center_horizontal"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="280dp"
            android:orientation="horizontal"
            android:layout_marginTop="20dp">

            <LinearLayout
                android:id="@+id/departGeoL"
                android:layout_width="193dp"
                android:layout_marginLeft="10dp"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/departAirportGeoIntro"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="23dp"
                    android:text="  Departure"
                    android:textColor="#000000"/>

                <TextView
                    android:id="@+id/departAirportName"
                    android:layout_width="wrap_content"
                    android:layout_height="70dp"
                    android:layout_marginTop="15dp"
                    android:layout_gravity="center_horizontal"
                    android:textSize="17dp"
                    android:text=""
                    android:textColor="#000000"/>

                <TextView
                    android:id="@+id/departCountry"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="15dp"
                    android:text="Country: "
                    android:textColor="#000000"/>

                <TextView
                    android:id="@+id/departCity"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:textSize="15dp"
                    android:text="City: "
                    android:textColor="#000000"/>

                <TextView
                    android:id="@+id/departLatitude"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:textSize="15dp"
                    android:text="Latitude: "
                    android:textColor="#000000"/>

                <TextView
                    android:id="@+id/departLongitude"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:textSize="15dp"
                    android:text="Longitude: "
                    android:textColor="#000000"/>

                <TextView
                    android:id="@+id/departElevation"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:textSize="15dp"
                    android:text="Airport Elevation(In Feet):"
                    android:textColor="#000000"/>

            </LinearLayout>


            <LinearLayout
                android:id="@+id/arriveGeoR"
                android:layout_width="193dp"
                android:layout_marginLeft="10dp"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/arriveAirportGeoInfo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="23dp"
                    android:text="    Arrival"
                    android:textColor="#000000"/>

                <TextView
                    android:id="@+id/arriveAirportName"
                    android:layout_width="wrap_content"
                    android:layout_height="70dp"
                    android:layout_marginTop="15dp"
                    android:layout_gravity="center_horizontal"
                    android:textSize="17dp"
                    android:text=""
                    android:textColor="#000000"/>

                <TextView
                    android:id="@+id/arriveCountry"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="15dp"
                    android:text="Country: "
                    android:textColor="#000000"/>

                <TextView
                    android:id="@+id/arriveCity"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:textSize="15dp"
                    android:text="City: "
                    android:textColor="#000000"/>

                <TextView
                    android:id="@+id/arriveLatitude"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:textSize="15dp"
                    android:text="Latitude: "
                    android:textColor="#000000"/>

                <TextView
                    android:id="@+id/arriveLongitude"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:textSize="15dp"
                    android:text="Longitude: "
                    android:textColor="#000000"/>

                <TextView
                    android:id="@+id/arriveElevation"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:textSize="15dp"
                    android:text="Airport Elevation(In Feet):"
                    android:textColor="#000000"/>
            </LinearLayout>
        </LinearLayout>


        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_gravity="center_horizontal"
            android:text="Enter Your Flight Information"
            android:textColor="#000000"
            android:textSize="20dp" />

        <EditText
            android:id="@+id/flightCarrierInput"
            android:layout_height="wrap_content"
            android:layout_width="260dp"
            android:layout_gravity="center_horizontal"
            android:ems="10"
            android:hint="Flight Carrier (e.x. AA)"
            android:inputType="textPersonName"
            android:textColor="#f0ffff"
            android:textColorHint="#cdc9c9"/>

        <EditText
            android:id="@+id/flightNumberInput"
            android:layout_width="260dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:ems="10"
            android:hint="Flight Number (e.x. 2211)"
            android:inputType="textPersonName"
            android:textColor="#f0ffff"
            android:textColorHint="#cdc9c9" />

        <EditText
            android:id="@+id/yearInput"
            android:layout_width="260dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:ems="10"
            android:hint="Year (e.x. 2018)"
            android:inputType="textPersonName"
            android:textColor="#f0ffff"
            android:textColorHint="#cdc9c9"/>

        <EditText
            android:id="@+id/monthInput"
            android:layout_width="260dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:ems="10"
            android:hint="Month (e.x. 12)"
            android:inputType="textPersonName"
            android:textColor="#f0ffff"
            android:textColorHint="#cdc9c9"/>

        <EditText
            android:id="@+id/dayInput"
            android:layout_width="260dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:ems="10"
            android:hint="Day (e.x. 8)"
            android:inputType="textPersonName"
            android:textColor="#f0ffff"
            android:textColorHint="#cdc9c9"/>

        <Button
            android:id="@+id/submitButton"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:text="Submit" />
    </LinearLayout>

</LinearLayout>
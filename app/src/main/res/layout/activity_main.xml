<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="top|center"
        android:orientation="vertical">

        <TextView
            android:id="@+id/WelcomeTitle"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:text="Welcome to Flight Finder!"
            android:textSize="28dp" />

        <TextView
            android:id="@+id/searchInstruction"
            android:layout_width="match_parent"
            android:layout_height="25dp"
            android:text="Choose What Do You Want To Search"
            android:layout_marginTop="20dp"
            android:textSize="15dp"/>

        <Button
            android:id="@+id/searchDeparetureArrival"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="15dp"
            android:text="Departure and Arrival" />

        <Button
            android:id="@+id/searchAircraft"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:layout_marginVertical="15dp"
            android:text="Aircraft" />

        <Button
            android:id="@+id/searchGeography"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:text="Geography"
            android:layout_marginVertical="15dp"/>
    </LinearLayout>

</LinearLayout>
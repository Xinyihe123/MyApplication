<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".SearchAircraft">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/airplane2"
        android:gravity="bottom"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="33dp"
            android:orientation="horizontal"
            android:layout_marginTop="20dp">

            <Button
                android:id="@+id/returnHome"
                android:layout_width="70dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="5dp"
                android:background="@drawable/rounded_button"
                android:bottomRightRadius="20dp"
                android:text="Back" />

            <TextView
                android:id="@+id/aircraftInfo"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="  Aircraft Information"
                android:textColor="#000000"
                android:textSize="20dp"
                android:typeface="monospace" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:orientation="horizontal"
            android:layout_marginTop="10dp">

            <LinearLayout
                android:id="@+id/nameOfInfo"
                android:layout_width="246dp"
                android:layout_height="290dp"
                android:orientation="vertical"
                android:layout_gravity="bottom">

                <TextView
                    android:id="@+id/N"
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:layout_gravity="center_horizontal"
                    android:text="     Equipment Name :"
                    android:textColor="#000000"
                    android:textSize="20dp" />

                <TextView
                    android:id="@+id/T"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_gravity="center_horizontal"
                    android:text="     TurboProp :"
                    android:textColor="#000000"
                    android:textSize="20dp" />

                <TextView
                    android:id="@+id/J"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_gravity="center_horizontal"
                    android:text="     Jet :"
                    android:textColor="#000000"
                    android:textSize="20dp" />

                <TextView
                    android:id="@+id/W"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_gravity="center_horizontal"
                    android:text="     Wide Body : "
                    android:textColor="#000000"
                    android:textSize="20dp" />

                <TextView
                    android:id="@+id/R"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_gravity="center_horizontal"
                    android:text="     Regional : "
                    android:textColor="#000000"
                    android:textSize="20dp" />

                <TextView
                    android:id="@+id/Tail"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_gravity="center_horizontal"
                    android:text="     Tail Number :"
                    android:textColor="#000000"
                    android:textSize="20dp" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/responseInfo"
                android:layout_width="160dp"
                android:layout_height="270dp"
                android:orientation="vertical"
                android:gravity="bottom">

                <TextView
                    android:id="@+id/name"
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:text=" "
                    android:textColor="#000000"
                    android:textSize="16dp" />

                <TextView
                    android:id="@+id/turbo"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:text=" "
                    android:textColor="#000000"
                    android:textSize="20dp" />

                <TextView
                    android:id="@+id/jet"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:text=" "
                    android:textColor="#000000"
                    android:textSize="20dp" />

                <TextView
                    android:id="@+id/widebody"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:text=" "
                    android:textColor="#000000"
                    android:textSize="20dp" />

                <TextView
                    android:id="@+id/reigonal"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:text=" "
                    android:textColor="#000000"
                    android:textSize="20dp" />

                <TextView
                    android:id="@+id/tailNumber"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:textColor="#000000"
                    android:textSize="20dp" />
            </LinearLayout>

        </LinearLayout>

        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="35dp"
            android:layout_gravity="center_horizontal"
            android:text="Enter Your Flight Information"
            android:textColor="#000000"
            android:textSize="20dp" />

        <EditText
            android:id="@+id/flightCarrierInput"
            android:layout_width="260dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:ems="10"
            android:hint="Flight Carrier (e.x. AA)"
            android:inputType="textPersonName"
            android:textColor="#f0ffff"
            android:textColorHint="#8b8989" />

        <EditText
            android:id="@+id/flightNumberInput"
            android:layout_width="260dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:ems="10"
            android:hint="Flight Number (e.x. 2211)"
            android:inputType="textPersonName"
            android:textColor="#f0ffff"
            android:textColorHint="#8b8989" />

        <EditText
            android:id="@+id/yearInput"
            android:layout_width="260dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:ems="10"
            android:hint="Year (e.x. 2018)"
            android:inputType="textPersonName"
            android:textColor="#f0ffff"
            android:textColorHint="#8b8989" />

        <EditText
            android:id="@+id/monthInput"
            android:layout_width="260dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:ems="10"
            android:hint="Month (e.x. 12)"
            android:inputType="textPersonName"
            android:textColor="#f0ffff"
            android:textColorHint="#8b8989" />

        <EditText
            android:id="@+id/dayInput"
            android:layout_width="260dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:ems="10"
            android:hint="Day (e.x. 8)"
            android:inputType="textPersonName"
            android:textColor="#f0ffff"
            android:textColorHint="#8b8989" />

        <Button
            android:id="@+id/submitButton"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:text="Submit" />

    </LinearLayout>

</LinearLayout>